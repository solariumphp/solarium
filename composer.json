{
    "name": "solarium/solarium",
    "type": "library",
    "description": "PHP Solr client",
    "keywords": ["solr", "search", "php"],
    "homepage": "http://www.solarium-project.org",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "See GitHub contributors",
            "homepage": "https://github.com/basdenooijer/solarium/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "psr/event-dispatcher": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "symfony/contracts": "^1.0 || ^2.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.2",
        "nyholm/psr7": "^1.2",
        "php-http/guzzle6-adapter": "^2.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpunit/phpunit": "^8.0",
        "symfony/event-dispatcher": "^4.3 || ^5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Solarium\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Solarium\\Tests\\": "tests/"
        }
    }
}
